@model App.Domain.DTOs.PatientCommand
@using App.Domain.Resources;
<style type="text/css">
    .table td, .table th{
        padding:.25rem!important;
    }
    .modal-body{
        max-height:450px;
        overflow-y:scroll;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        var patientId = $('#PkPatientId').val();
        if (patientId != null) {
            window.getNextOfKinRecordsData(patientId);
            window.getGpDetailsRecordsData(patientId);
        }
    });
</script>
<div class="modal-header">
    <h4 class="modal-title text-info">@ViewBag.ModalTitle</h4>
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
</div>
<div class="modal-body">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "validation_form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.PkPatientId)
        <div class="form-horizontal">
            <fieldset>
                <legend>Basic Info</legend>
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive-sm">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <td style="background-color:#f6f6f6" class="col-md-3 col-lg-3 col-sm-3">@Html.LabelFor(model => model.ForeName, AppPatientBasicInfo.lblForeName, htmlAttributes: new { @class = "label" })</td>
                                        <td class="col-md-9 col-lg-9 col-sm-9">@Html.DisplayFor(model => model.ForeName)</td>
                                    </tr>
                                    <tr>
                                        <td style="background-color: #f6f6f6 " class="col-md-3 col-lg-3 col-sm-3">@Html.LabelFor(model => model.PasNumber, AppPatientBasicInfo.lblPasNumber, htmlAttributes: new { @class = "label" })</td>
                                        <td class="col-md-9 col-lg-9 col-sm-9">@Html.DisplayFor(model => model.PasNumber)</td>
                                    </tr>
                                    <tr>
                                        <td style="background-color:#f6f6f6" class="col-md-3 col-lg-3 col-sm-3">@Html.LabelFor(model => model.SurName, AppPatientBasicInfo.lblSurName, htmlAttributes: new { @class = "label" })</td>
                                        <td class="col-md-9 col-lg-9 col-sm-9">@Html.DisplayFor(model => model.SurName)</td>
                                    </tr>
                                    <tr>
                                        <td style="background-color:#f6f6f6" class="col-md-3 col-lg-3 col-sm-3">@Html.LabelFor(model => model.Gender, AppPatientBasicInfo.lblGender, htmlAttributes: new { @class = "label" })</td>
                                        <td class="col-md-9 col-lg-9 col-sm-9">@Html.DisplayFor(model => model.Gender)</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <fieldset>
                <legend>Next Of Kin</legend>
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive-sm">
                            <table class="table table-bordered kin-table" width="100%">
                                <thead>
                                    <tr>
                                        <th class="text-center">Name</th>
                                        <th class="text-center">Relationship</th>
                                        <th class="text-center">Address #1</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <fieldset>
                <legend>Gp Details</legend>
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive-sm">
                            <table class="table table-bordered dp-table" width="100%">
                                <thead>
                                    <tr>
                                        <th class="text-center">SurName</th>
                                        <th class="text-center">Code</th>
                                        <th class="text-center">Phone</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    }
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-danger" data-dismiss="modal">@AppSettings.Closebtn</button>
</div>